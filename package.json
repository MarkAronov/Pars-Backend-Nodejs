{
	"name": "pars-backend-nodejs",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build": "tsc -b ",
		"lf": "bun run biome:lint && bun run biome:format",
		"dev": "bun --env-file=env/.env.development --watch src/index.ts",
		"start": "bun --env-file=env/.env.development src/index.ts",
		"test": "bun --env-file=env/.env.test vitest run",
		"biome:lint": "biome lint ./src",
		"biome:format": "biome format ./src --write",
		"biome:check": "biome check ./src",
		"biome:check:apply": "biome check ./src --apply"
	},
	"type": "module",
	"keywords": [],
	"author": "",
	"license": "MIT",
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": [
			"biome check --apply --no-errors-on-unmatched"
		]
	},
	"dependencies": {
		"@swc/helpers": "^0.5.15",
		"@types/bun": "^1.1.14",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"crypto": "^1.0.1",
		"crypto-js": "^4.2.0",
		"debug": "^4.4.0",
		"express": "^4.21.2",
		"express-session": "^1.18.1",
		"file-type": "^19.6.0",
		"helmet": "^7.2.0",
		"ip": "^2.0.1",
		"jsonwebtoken": "^9.0.2",
		"lodash": "^4.17.21",
		"mongodb": "^6.12.0",
		"mongoose": "^8.9.0",
		"mongoose-unique-validator": "^5.0.1",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"socket.io": "^4.8.1",
		"validator": "^13.12.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@swc/core": "^1.10.1",
		"@types/bcryptjs": "^2.4.6",
		"@types/crypto-js": "^4.2.2",
		"@types/debug": "^4.1.12",
		"@types/express": "^4.17.21",
		"@types/express-session": "^1.18.1",
		"@types/ip": "^1.1.3",
		"@types/jsonwebtoken": "^8.5.9",
		"@types/lodash": "^4.17.13",
		"@types/mongoose-unique-validator": "^1.0.9",
		"@types/morgan": "^1.9.9",
		"@types/multer": "^1.4.12",
		"@types/supertest": "^2.0.16",
		"@types/validator": "^13.12.2",
		"supertest": "^6.3.4",
		"ts-jest": "^29.2.5",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^4.9.5",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^2.1.8"
	}
}
